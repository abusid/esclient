<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] \(%thread\) %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/app/app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] \(%thread\) %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/app/app.log.%d{yyyy-MM-dd-HH-mm}</fileNamePattern>
        </rollingPolicy>
    </appender>

    <appender name="tracy" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/tracy/tracy.log</file>
        <encoder>
            <pattern>%m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/var/log/tracy/tracy.log.%d{yyyy-MM-dd-HH}.%i.gz</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>15GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <logger name="TRACY_LOGGER" additivity="false" level="info">
        <appender-ref ref="tracy"/>
    </logger>

    <logger name="com.dnb" level="info"/>
    <logger name="org.springframework" level="info"/>

    <root level="info">
        <appender-ref ref="file"/>
    </root>

    <!-- Console only used for development only
    <root level="debug">
        <appender-ref ref="console"/>
    </root>
    -->


</configuration>